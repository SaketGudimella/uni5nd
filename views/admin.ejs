<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col items-center p-6">

    <div class="w-full max-w-4xl bg-white p-6 rounded-lg shadow-md">
        <h1 class="text-3xl font-bold text-center mb-6">Admin Panel</h1>
        
        <h2 class="text-xl font-semibold mb-4">List of Users</h2>

        <div class="overflow-x-auto">
            <table class="w-full border-collapse bg-white shadow-md rounded-lg">
                <thead>
                    <tr class="bg-gray-200">
                        <th class="py-2 px-4 border">Name</th>
                        <th class="py-2 px-4 border">Email</th>
                        <th class="py-2 px-4 border">Role</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr class="hover:bg-gray-100">
                            <td class="py-2 px-4 border"><%= user.name %></td>
                            <td class="py-2 px-4 border"><%= user.email %></td>
                            <td class="py-2 px-4 border"><span class="px-2 py-1 rounded text-white 
                                <%= user.role === 'admin' ? 'bg-red-500' : 'bg-blue-500' %>">
                                <%= user.role %>
                            </span></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <div class="mt-6 text-center">
            <a href="/" class="px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-800">Back to Home</a>
        </div>
    </div>

</body>
</html>
